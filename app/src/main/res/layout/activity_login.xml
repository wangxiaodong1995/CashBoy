<?xml version="1.0" encoding="utf-8"?>

<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="333px"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_login" />


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_wx"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_marginLeft="123px"
            android:layout_marginRight="123px"
            android:layout_marginTop="50px">


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_centerInParent="true"
                android:background="@drawable/wx_button_shape">

                <TextView
                    android:id="@+id/tv_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="微信登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_title" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26px"
                    android:layout_toLeftOf="@id/tv_wx"
                    android:src="@mipmap/ic_wx" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30px"
                android:src="@mipmap/ic_recommend" />
        </com.zhy.autolayout.AutoRelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:text="使用微信登录可以提现和参加红包活动，建议使用微信登录！"
            android:textColor="@color/color_999999"
            android:textSize="11sp" />


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_qq"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginLeft="123px"
            android:layout_marginRight="123px"
            android:layout_marginTop="100px"
            android:background="@drawable/qq_button_shape">


            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="QQ登录"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_title" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="26px"
                android:layout_toLeftOf="@id/tv_qq"
                android:src="@mipmap/ic_qq" />
        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_xl"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginLeft="123px"
            android:layout_marginRight="123px"
            android:layout_marginTop="50px"
            android:background="@drawable/xl_button_shape">


            <TextView
                android:id="@+id/tv_xl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="新浪微博登录"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_title" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="26px"
                android:layout_toLeftOf="@id/tv_xl"
                android:src="@mipmap/ic_xl" />
        </com.zhy.autolayout.AutoRelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:gravity="center"
            android:text="我们不会在未经同意的情况下在任何社交媒体发布消息"
            android:textColor="@color/color_999999"
            android:textSize="11sp" />

    </com.zhy.autolayout.AutoLinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_alignParentBottom="true"
        android:background="@color/color_F5F5F5"
        android:gravity="center"
        android:text="上次是QQ登录"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/textSize_content" />
</com.zhy.autolayout.AutoRelativeLayout>