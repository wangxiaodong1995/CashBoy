<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="270px"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_big_money" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="20px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10px"
            android:drawableTop="@mipmap/ic_red_envelopeswahb"
            android:gravity="center"
            android:text="@string/my_love_red"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/textSize_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10px"
            android:drawableTop="@mipmap/ic_join_book"
            android:gravity="center"
            android:text="@string/join_the_book"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/textSize_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10px"
            android:drawableTop="@mipmap/ic_inviting"
            android:gravity="center"
            android:text="@string/inviting_friends"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/textSize_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10px"
            android:drawableTop="@mipmap/ic_calculator"
            android:gravity="center"
            android:text="@string/calculator"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/textSize_content" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330px"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:padding="20px">

        <TextView
            android:id="@+id/tv_chief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首席体验官"
            android:textColor="@color/color_666666"
            android:textSize="13sp" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_chief"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_coupon">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:layout_marginTop="30px"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返利加码"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥40"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_soild_white"
                    android:paddingBottom="10px"
                    android:paddingLeft="40px"
                    android:paddingRight="40px"
                    android:paddingTop="10px"
                    android:text="立即参与"
                    android:textColor="@color/color_C42B75"
                    android:textSize="14sp" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_chief"
                android:layout_centerVertical="true"
                android:layout_marginRight="70px"
                android:layout_marginTop="48px"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全场理财产品通用券"
                    android:textColor="@color/color_555555"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="( 新用户专享 )"
                    android:textColor="@color/color_555555"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_soild_white"
                    android:paddingTop="30px"
                    android:text="有效日期 2018-10-5"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_red" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="20px"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:text="男友推荐"
            android:textColor="@color/color_555555"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_F5F5F5" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_big_money" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>